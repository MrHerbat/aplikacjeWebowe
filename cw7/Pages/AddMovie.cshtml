@page
@model cw7.Pages.AddMovieModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Adding Movies</title>
</head>
<body>
<h1>Dodaj nowy film</h1>
<form asp-page="AddMovie" method="post">
    <div class="row m-3">
        <label class="col-3" asp-for="@Model.MyMovie.Title"></label>
        <input class="col-6" asp-for="@Model.MyMovie.Title" />
        <span asp-validation-for="@Model.MyMovie.Title" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-3" asp-for="@Model.MyMovie.Director"></label>
        <input class="col-6" asp-for="@Model.MyMovie.Director" />
        <span asp-validation-for="@Model.MyMovie.Director" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-3" asp-for="@Model.MyMovie.ReleaseDate"></label>
        <input type="date" class="col-6" asp-for="@Model.MyMovie.ReleaseDate" />
        <span asp-validation-for="@Model.MyMovie.ReleaseDate" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-3" asp-for="@Model.MyMovie.Price"></label>
        <input type="number" class="col-6" asp-for="@Model.MyMovie.Price" step="0.01" />
        <span asp-validation-for="@Model.MyMovie.Price" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <input type="submit" value="Dodaj" class="offset-3 col-6 btn btn-primary" />
    </div>
</form>
</body>
</html>
