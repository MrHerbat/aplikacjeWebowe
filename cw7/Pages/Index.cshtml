@page
@model cw7.Pages.IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Movies</title>
</head>
<body>
<h1>RAZOR FILMY</h1>
<a asp-page="Games" class="btn">Gry</a>
<a asp-page="AddMovie" class="btn">Dodaj film</a>
<table class="table table-striped">
    <thead>
        <tr>  
            <th>Id</th>
            <th>Title</th>
            <th>Director</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th> 
            <th>Operations</th>
        </tr>
    
    </thead>
    <tbody>

    @{
        int lp = 0;
    }
    @foreach(var movie in Model.Movies)
    {
        lp++;
        <tr>
            <td>@(lp)</td>
            <td>@movie.Title</td>
            <td>@movie.Director</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.Genre</td>
            <td>@movie.Price</td>
            <td>
                <a class="btn btn-danger" asp-page="DeleteMovie" asp-route-id="@movie.Id">Usu≈Ñ</a>
                <a class="btn btn-secondary" asp-page="EditMovie" asp-route-id="@movie.Id">Edytuj</a>
            </td>
            
        </tr>
    }
    </tbody>
</table>
<script src="~/index.js" defer></script>
</body>
</html>